<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="product_rule_everyone" model="ir.rule">
            <field name="name">Product - Access non-flower products (Global)</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="global" eval="True"/> <field name="domain_force">
                [
                    (1,'=',1)] if user.user_has_groups('flower_shop.group_gardener') else [('is_flower','=', False)
                ]
            </field>
        </record>

        <record id="product_rule_gardener" model="ir.rule">
            <field name="name">Product - Gardener access to flowers</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="groups" eval="[(4, ref('flower_shop.group_gardener'))]"/>
            <field name="domain_force">['|', ('user_ids', '=', False), ('user_ids', 'in', user.id)]</field>
        </record>

    </data>
</odoo>