<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="product_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='type']" position="after">
                <field name="is_flower"/>
            </xpath>
            
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="flower_id" attrs="{'invisible': [('is_flower', '=', False)]}"/>
            </xpath>

            <xpath expr="//group[@name='group_general']" position="inside">
                <field name="sequence_id" attrs="{'invisible': [('is_flower', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="action_flower_product" model="ir.actions.act_window">
        <field name="name">Flower Products</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="domain">[('is_flower', '=', True)]</field>
        <field name="context">{'default_is_flower': True}</field>
    </record>

    <menuitem id="menu_flower_products"
              name="Flower Products"
              parent="sale.product_menu_catalog"
              action="action_flower_product"
              sequence="2"/>
    
    <record id="sale_order_line_view_inherit_flower_domain" model="ir.ui.view">
        <field name="name">sale.order.line.view.inherit.flower.domain</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">
                    [
                        ('sale_ok', '=', True),
                        '|',
                        ('company_id', '=', False),
                        ('company_id', '=', parent.company_id),
                        ('is_flower', '=', True)
                    ]
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>