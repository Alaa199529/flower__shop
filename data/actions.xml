<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cron_check_watering" model="ir.cron">
        <field name="name">Check Flower Watering</field>
        <field name="model_id" ref="stock.model_stock_lot"/>
        <field name="state">code</field>
        <field name="code">model.action_needs_watering()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

    <record id="cron_get_weather" model="ir.cron">
        <field name="name">Get Weather for Warehouses</field>
        <field name="model_id" ref="stock.model_stock_warehouse"/>
        <field name="state">code</field>
        <field name="code">model.get_weather_all_warehouses()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

    <record id="cron_forecast_weather" model="ir.cron">
        <field name="name">Forecast Weather for Warehouses</field>
        <field name="model_id" ref="stock.model_stock_warehouse"/>
        <field name="state">code</field>
        <field name="code">model.get_forecast_all_warehouses()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>
</odoo>
