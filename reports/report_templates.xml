<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="report_flower_sale_order">
        <t t-call="web.html_container">
            <t t-set="report_header_style" t-value="'display: none;'"/>
            <t t-set="footer" t-value="'oe_hidden'"/>
            
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout_boxed"> 
                    <div class="page">
                        <h1>Flower Sale Order: <span t-field="o.name"/></h1>
                        <p>Customer: <span t-field="o.partner_id.name"/></p>
                        </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_flower_sale_order" model="ir.actions.report">
        <field name="name">Flower Sale Order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">flower_shop.report_flower_sale_order</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="flower_shop.paperformat_flower_sale_order"/>
    </record>
</odoo>